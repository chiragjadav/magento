<?xml version="1.0" ?>
<config>
	<modules>
		<Ccc_User>
			<version>0.0.1</version>
		</Ccc_User>
	</modules>
	<frontend>
		<routers>
			<user>
				<use>standard</use>
				<args>
					<module>Ccc_User</module>
					<frontName>User</frontName>
				</args>
			</user>
		</routers>
		<layout>
            <updates>
                <user>
                    <file>user.xml</file>
                </user>
            </updates>
        </layout>
	</frontend>
	<admin>
		<routers>
			<user>
				<use>admin</use>
				<args>
					<module>Ccc_User</module>
					<frontName>User</frontName>
				</args>
			</user>
		</routers>
	</admin>
	<adminhtml>
		<menu>
			<user>
				<title>User</title>
				<sort_order>71</sort_order>
				<children>
					<items>
						<title>Manage User</title>
						<sort_order>0</sort_order>
						<action>user/adminhtml_user</action>
					</items>
				</children>
			</user>
		</menu>
		<acl>
			<resources>
				<all>
					<title>Allow Everything</title>
				</all>
				<admin>
					<children>
						<user>
							<title>User Module</title>
							<sort_order>200</sort_order>
						</user>
					</children>
				</admin>
			</resources>
		</acl>
		<layout>
			<updates>
				<user>
					<file>user.xml</file>
				</user>
			</updates>
		</layout>
	</adminhtml>
	<global>
		<models>
			<user>
				<class>Ccc_User_Model</class>
				<resourceModel>user_resource</resourceModel>
			</user>
			<user_resource>
				<class>Ccc_User_Model_Resource</class>
				<entities>
					<user>
						<table>user</table>
					</user>
				</entities>
			</user_resource>
		</models>
		<resources>
			<user_setup>
				<setup>
					<module>Ccc_User</module>
				</setup>
				<connection>
					<use>core_setup</use>
				</connection>
			</user_setup>
			<user_write>
				<connection>
					<use>core_write</use>
				</connection>
			</user_write>
			<user_read>
				<connection>
					<use>core_read</use>
				</connection>
			</user_read>
		</resources>
		<blocks>
			<ccc_user>
				<class>Ccc_User_Block</class>
			</ccc_user>
		</blocks>
		<helpers>
			<user>
				<class>Ccc_User_Helper</class>
			</user>
		</helpers>
	</global>
</config>