<?xml version="1.0" encoding="UTF-8"?>
<config>
	<modules>
		<Ccc_admin>
			<version>0.0.1</version>
		</Ccc_admin>
	</modules>
	<admin>
		<routers>
			<admin>
				<use>admin</use>
				<args>
					<module>Ccc_Admin</module>
					<frontName>Admin</frontName>
				</args>
			</admin>
		</routers>
	</admin>
	<adminhtml>
		<menu>
			<admin>
				<title>Admin</title>
				<sort_order>71</sort_order>
				<children>
					<items>
						<title>Manage Admin</title>
						<sort_order>0</sort_order>
						<action>admin/adminhtml_admin</action>
					</items>
				</children>
			</admin>
		</menu>
		<acl>
			<resources>
				<all>
					<title>Allow Everything</title>
				</all>
				<admin>
					<children>
						<title>Admin Module</title>
						<sort_order>200</sort_order>
					</children>
				</admin>
			</resources>
		</acl>
		<layout>
			<updates>
				<admin>
					<file>admin.xml</file>
				</admin>
			</updates>
		</layout>
	</adminhtml>
	<global>
		<models>
			<ccc_admin>
				<class>Ccc_Admin_Model</class>
				<resourceModel>ccc_admin_resource</resourceModel>
			</ccc_admin>
			<ccc_admin_resource>
				<class>Ccc_Admin_Model_Resource</class>
				<entities>
					<data>
						<table>ccc_admin_data</table>
					</data>
				</entities>
			</ccc_admin_resource>
		</models>
		<resources>
			<admin_setup>
				<setup>
					<module>Ccc_Admin</module>
				</setup>
			</admin_setup>
		</resources>
		<blocks>
			<ccc_admin>
				<class>Ccc_Admin_Block</class>
			</ccc_admin>
		</blocks>
		<helpers>
			<ccc_admin>
				<class>Ccc_Admin_Helper</class>
			</ccc_admin>
		</helpers>
	</global>
</config>